
<div class="main clearfix">
    <div class="content">
        <form action="/" method="post">
            <div class="box-1 text-center">
               
                <p id="reset" class="reset">{{messages.success}}</p>
                
                <h3 class="errorM" style="color: red;font-weight:bold;">{{messages.error}}</h3>
                 
                <label class="label-body">Registration Number:</label>
                <input class="input" type="text" placeholder="eg. CA 112 332,CL 322-332,CJ 3244,CY 322234 "
                    name="inputNumber" />
            </div>
            <br>
            <!--add button-->
            <div class="flex-parent jc-center">

                <button class="btn-default btn btn-info margin-right " type="submit" name="button">Add</button>

                <form action="/reset" method="post">

                    <a class="btn-default btn btn-primary magenta" href="/reset" name="button"
                        onclick="resetBtn()">Reset</a>

                </form>
            </div>
        </form><br>
    </div>

    <form action="/reg_numbers" method="post">
        <div class="text-center" style="padding: 1em;">
            <input type="radio" name="townRadio" class="townItemTypeRadio" value="CH">
            <label class="label-body">Queenstown</label>
            <input type="radio" name="townRadio" class="townItemTypeRadio" value="CA">
            <label class="label-body">Cape Town</label>
            <input type="radio" name="townRadio" class="townItemTypeRadio" value="CJ">
            <label class="label-body">Paarl</label>
            <input type="radio" name="townRadio" class="townItemTypeRadio" value="All">
            <label class="label-body">All</label>
            <br>
            <div class="text-center" style="padding: 1em;">
                <button class="btn-default btn btn-info" type="submit" name="button">Show</button>
            </div>
        </div>
    </form>
    <script>
        function resetBtn() {
            let clearMessage = document.querySelector(".reset");

            setTimeout(function () {
                alert("You are about to clear all registration numbers?");
                clearMessage.innerHTML = "";

            }, 3000);
        }
    </script>

    <ul>
        <div class="wrap">
            {{#each registrations}}
            
                <li style=" font-weight:bolder;
            text-align: center;
            border-radius: 25px;
            border: 4px solid black;
            background: #ffa200;
            padding: 12px;
            margin:1em;
            width: 150px;
            height: 50px;
            list-style-type: none;">{{this}}</li>
            {{/each}}
        </div>

    </ul>
</div>
</div>
<script>

    let error = document.querySelector(".errorM");
    let reset = document.querySelector("#reset");

    setTimeout(function () {

        error.innerHTML = "";
        reset.innerHTML = "";


    }, 3000);

</script>
</div>